<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/rcard"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="90dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_sender_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Sender Name"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/msg_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_sender_sent"
                android:layout_marginLeft="42dp"
                android:layout_marginStart="42dp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/iv_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/msg_sent"
                android:layout_alignStart="@+id/msg_sent"
                android:layout_below="@+id/tv_sender_sent" />

            <TextView
                android:id="@+id/tv_pretty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_sent"
                android:layout_marginTop="12dp"
                android:paddingRight="7dp"
                android:paddingBottom="7dp"
                android:text="pretty_time" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>