<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.hackathon.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_plumbing"
                android:layout_width="190dp"
                android:layout_height="175dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/plmb" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_plumbing"
                android:layout_marginLeft="62dp"
                android:layout_marginStart="62dp"
                android:text="Plumber"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_carpentry"
                android:layout_width="191dp"
                android:layout_height="175dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_plumbing"
                android:layout_toRightOf="@+id/iv_plumbing"
                app:srcCompat="@mipmap/carpentry" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_carpentry"
                android:layout_marginLeft="62dp"
                android:layout_marginStart="62dp"
                android:layout_toEndOf="@+id/iv_plumbing"
                android:layout_toRightOf="@+id/iv_plumbing"
                android:text="Carpenter"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_locksmith"
                android:layout_width="190dp"
                android:layout_height="175dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="25dp"
                app:srcCompat="@mipmap/locksmith" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_below="@+id/iv_locksmith"
                android:layout_marginLeft="54dp"
                android:text="LockSmith"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_cook"
                android:layout_width="191dp"
                android:layout_height="175dp"
                android:layout_above="@+id/textView4"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/cook" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignRight="@+id/textView2"
                android:layout_below="@+id/iv_locksmith"
                android:text="Cook"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_mason"
                android:layout_width="190dp"
                android:layout_height="175dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                app:srcCompat="@mipmap/mason" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_mason"
                android:layout_marginLeft="70dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16dp"
                android:text="Mason" />

            <ImageView
                android:id="@+id/iv_helper"
                android:layout_width="191dp"
                android:layout_height="175dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="25dp"
                app:srcCompat="@mipmap/helper" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignRight="@+id/textView2"
                android:text="Helper"
                android:paddingRight="5dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16dp"
                android:layout_below="@+id/iv_mason" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
